@model List<Sale>

@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Ecommerce: Products </h1>
    <p>Welcome to the Products</p>
</div>
<div class="table-container" style="display: flex; align-items: center; justify-content: center;">
@foreach (var sale in @Model)
    {
    <table>
        <thead class="table table-dark table-hover">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Quantity to buy</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in sale.Products)
        {
            <tr>
                <td>@product.UniqueId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
        </tbody>
    </table>
}
</div>